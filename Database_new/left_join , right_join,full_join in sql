SAMPLE TABLES:-
=============
CREATE TABLE DEPARTMENTS (
    DEPTNO INT PRIMARY KEY,           
    DNAME VARCHAR(10)        
);


INSERT INTO DEPARTMENTS VALUES 
(10, 'HR'),
(20, 'IT'),
(40, 'FINANCE');



CREATE TABLE EMPLOYEES (
    EMPNO INT PRIMARY KEY,             
    ENAME VARCHAR(10),          
    DEPTNO INT REFERENCES DEPARTMENTS(DEPTNO)  
);


INSERT INTO EMPLOYEES VALUES 
(1, 'KIRAN', 10),
(2, 'GOWTHAM', 20),
(3, 'SURYA', NULL),    
(4, 'ANUSHKA', 20);



CREATE TABLE EMPLOYEE_DETAILS (
    EMPID INT PRIMARY KEY,              
    NAME VARCHAR(10),
    DOB DATE,
    STATE CHAR(2)
);


INSERT INTO EMPLOYEE_DETAILS VALUES 
(1, 'JOHN', '1995-04-23', 'NY'),
(2, 'SMITH', '1990-08-15', 'CA'),
(3, 'ROHAN', '1996-04-27', 'TX'),
(4, 'JOHNSON', '1975-02-12', 'CA'),
(5, 'BROWN', '2000-11-05', 'AL'),
(6, 'JILL', '1999-06-15', 'CA'),
(7, 'JAMES', '1983-09-12', 'WA'),
(8, 'JACK', '1982-09-25', 'CA');



CREATE TABLE EMPLOYEE_SALARY (
    ID INT,                          
    SALARY DECIMAL(10, 2) ,      
    FOREIGN KEY (ID) REFERENCES EMPLOYEE_DETAILS(EMPID) 
);

INSERT INTO EMPLOYEE_SALARY VALUES
(1, 15000),
(2, 20000),
(3, 25000),
(4, 18000),
(5, 35000),
(6, 40000),
(7, 45000);



CREATE TABLE COURIER (
    COURIER_ID INT PRIMARY KEY,
    FROM_ADDRESS VARCHAR(10),
    TO_ADDRESS VARCHAR(15),
    EXPECTED_DELIVERY_DATE DATE
);


INSERT INTO COURIER VALUES
(101, 'Chennai', 'Mumbai', '2025-01-15'),
(102, 'Delhi', 'Bangalore', '2025-01-20'),
(103, 'Hyderabad', 'Pune', '2025-02-25'),
(104, 'Kolkata', 'Ahmedabad', '2025-01-05'),
(105, 'Mumbai', 'Delhi', '2025-03-10');


CREATE TABLE COURIER_STATUS (
    COURIER_ID INT,
    STATUS VARCHAR(10),
    ACTUAL_DELIVERED_DATE DATE,
    FOREIGN KEY (COURIER_ID) REFERENCES COURIER(COURIER_ID)
);



INSERT INTO COURIER_STATUS VALUES
(101, 'Delivered', '2025-01-16'),
(102, 'In Transit', NULL),
(103, 'Delivered', '2025-02-26'),
(104, 'Delivered', '2025-01-06'),
(105, 'Delivered', '2025-03-11');




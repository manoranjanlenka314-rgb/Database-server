CREATE TABLE FLIGHTS (
    FLIGHT_ID INT ,
    DEPARTURE_DATE DATE,
    DEPARTURE_LOCATION VARCHAR(50),
    DESTINATION VARCHAR(50),
    DEPARTURE_TIME TIME
);


